<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F7F7"
    >

    <ImageView
        android:id="@+id/star_item_image_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/stat_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="成人钢琴"
        android:textColor="#000000"
        android:layout_below="@id/star_item_image_view"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        />
    <TextView
        android:id="@+id/star_item_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANOH HALL成人钢琴"
        android:textColor="@color/gray"
        android:layout_alignLeft="@id/stat_item_title"
        android:layout_below="@id/stat_item_title"
        android:layout_marginTop="14dp"
        />
    <TextView
        android:id="@+id/star_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 1.7km"
        android:textColor="@color/gray"
        android:layout_toRightOf="@id/star_item_position"
        android:layout_alignTop="@id/star_item_position"
        />
    <TextView
        android:id="@+id/stat_item_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="问医生或"
        android:textColor="@color/gray"
        android:layout_toRightOf="@id/star_item_distance"
        android:layout_alignTop="@id/star_item_position"
        />
    <LinearLayout
        android:id="@+id/star_item_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/stat_item_title"
        android:orientation="horizontal"
        android:layout_below="@id/star_item_position"
        android:layout_marginTop="14dp"
        >
        <TextView
            android:id="@+id/star_item_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:background="@drawable/star_txt_shape"
            />
        <TextView
            android:id="@+id/star_item_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/collect_selector"
            android:paddingLeft="10dp"
            android:text="  46人收藏"
            android:textColor="@color/gray"
            android:background="@drawable/star_txt_shape"
            android:clickable="true"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/star_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/star_txt_shape"
        android:textColor="@color/gray"
        android:text="188"
        android:layout_marginRight="14dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/star_item_linear_layout"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/star_item_price"
        android:background="#FFF7F7F7"
        />

</RelativeLayout>