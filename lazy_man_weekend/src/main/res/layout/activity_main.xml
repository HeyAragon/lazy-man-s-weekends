<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qianfeng.aragon.lazy_man_weekend.MainActivity">

    <FrameLayout
        android:id="@+id/main_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0000ff"
         />
    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <RadioButton
            android:id="@+id/main_star_rb"
            style="@style/main_rg_style"
            android:drawableLeft="@drawable/main_rb_star_selector"
            android:layout_marginLeft="12dp"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/main_search_rb"
            style="@style/main_rg_style"
            android:drawableLeft="@drawable/main_rb_search_selector"
            />
        <RadioButton
            android:id="@+id/main_cat_rb"
            style="@style/main_rg_style"
            android:drawableLeft="@drawable/main_rb_cat_selector"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/main_user_rb"
            style="@style/main_rg_style"
            android:drawableRight="@drawable/main_rb_user_selector"
            android:layout_marginRight="12dp"
            />

    </RadioGroup>
</RelativeLayout>
