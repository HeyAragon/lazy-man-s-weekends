<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--rectangle: 矩形，默认的形状，可以画出直角矩形、圆角矩形、弧形等-->
    <!--oval: 椭圆形，用得比较多的是画正圆-->
    <!--line: 线形，可以画实线和虚线-->
    <!--ring: 环形，可以画环形进度条-->
    <stroke
        android:width="1dp"
        android:color="@color/gray"
        />
    <corners
        android:radius="2dp"
        />
    <padding
        android:top="5dp"
        android:left="10dp"
        android:right="10dp"
        android:bottom="5dp"
        />


</shape>